#!/bin/bash
set -euo pipefail

cd ~

if ! sudo -u "$USER_NAME" command -v yay &>/dev/null; then
    sudo -u "$USER_NAME" git clone https://aur.archlinux.org/yay.git /tmp/yay
    (cd /tmp/yay && sudo -u "$USER_NAME" makepkg -si --noconfirm)
    rm -rf /tmp/yay
fi

# Paquetes AUR recomendados
sudo -u "$USER_NAME" yay -S --noconfirm \
    nerd-fonts-fira-code \
    papirus-icon-theme \
    pop-gtk-theme \
    tela-icon-theme \
    zsh-theme-powerlevel10k
